num_1= int(input("Enter a number: "))
num_2= int(input("Enter a number: "))
num_3= int(input("Enter a number: "))
add= num_1 + num_2 + num_3
print("The sum of your three numbers is: " + str(add))
average= add / 3
print("The average of your three numbers is: " + str(average))
